<div class="row">
	<div class="col-md-7">
		<h2 align="left"><%= @experience.name %></h2>
		<div class="well"><%= @experience.description %></div>
		<div><%="Hospedado por #{@experience.user.name}"%></div>
		<% if current_user == @experience.user %>
			<%= link_to 'Editar informações', edit_experience_path(@experience), class: "btn btn-xs btn-primary" %>
			<%= link_to 'Deletar', experience_path(@experience), method: :delete, data: {confirm: "Voce tem certeza?"}, class: "btn btn-xs btn-danger"%>
		<% end %>
	</div>
	<div class="col-md-4 col-md-offset-1">
		<div class="row">
			<h1><%= image_tag @experience.picture %></h1>
		</div>
		<div class="row">
			<div class="col-sm-4">
				<%= "R$#{@experience.price}/2h" %>
			</div>
			<div class="col-sm-4 col-sm-offset-4">
				<%= link_to 'Contratar', '#', class: "btn btn-xs btn-default"%>
			</div>
		</div>
	</div>
</div>


