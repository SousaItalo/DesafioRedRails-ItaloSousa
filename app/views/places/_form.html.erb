<%= form_for(@place, :html => {class: "form-horizontal", role: "form"}) do |p| %>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= p.label :Nome %>
	</div>
	<div class="col-sm-8">
		<%= p.text_field :name, class: "form-control", placeholder: "Nome", autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= p.label :Camas %>
	</div>
	<div class="col-sm-8">
		<%= p.text_field :beds_qtd, class: "form-control", placeholder: "Acomoda quantas pessoas?", autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= p.label :País %>
	</div>
	<div class="col-sm-8">
		<%= p.text_field :country, class: "form-control", placeholder: "País", autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= p.label :Cidade %>
	</div>
	<div class="col-sm-8">
		<%= p.text_field :city, class: "form-control", placeholder: "Cidade", autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= p.label :Descrição %>
	</div>
	<div class="col-sm-8">
		<%= p.text_area :description, class: "form-control", placeholder: "Convença que seu lugar é incrivel", autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= p.label :Imagem %>
	</div>
	<div class="col-sm-8">
		<%= p.file_field :picture, class: "form-control", placeholder: "Convença que seu lugar é incrivel", autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= p.label :Preco %>
	</div>
	<div class="col-sm-8">
		<%= p.text_field :price, class: "form-control", placeholder: "Quanto vale seu lugar?", autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= p.submit "Confirmar", class: 'btn btn-primary btn-large' %>
	</div>
</div>
<% end %>