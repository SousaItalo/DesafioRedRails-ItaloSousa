<div class="row">
	<div class="col-md-7">
		<h2 align="left"><%= @place.name %></h2>
		<div class="well"><%= @place.description %></div>
		<div><%= @place.user.name %></div>
		<% if current_user == @place.user %>
			<%= link_to 'Editar informações', edit_place_path(@place), class: "btn btn-xs btn-primary"%>
			<%= link_to 'Deletar', place_path(@place), method: :delete, data: {confirm: "Voce tem certeza?"}, class: "btn btn-xs btn-danger"%>
		<% end %>
	</div>
	<div class="col-md-4 col-md-offset-1">
		<div class="row">
			<h1><%= image_tag @place.picture %></h1>
		</div>
		<div class="row">
			<div class="col-sm-4">
				<%= "R$#{@place.price}/dia" %>
			</div>
			<div class="col-sm-4 col-sm-offset-4">
				<%= link_to 'Reservar', new_place_reservation_path(@place), class: "btn btn-xs btn-default"%>
			</div>
		</div>
	</div>
</div>


